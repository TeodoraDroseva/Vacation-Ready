@model LoginViewModel

@{
    ViewBag.TItle = "Login";
}

<div class="login">
    <h1>Sign in</h1>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group login_input">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group login_input">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group login_input">
                    <div class="form-check">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(x => x.RememberMe)
                        </label>
                    </div>
                </div>
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go back</a>
                <div class="wrapper">
                    <input class="btn btn-primary login_btn" type="submit" value="Sign in"/>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .login {
        height: 200px;
        width: 400px;
        position: fixed;
        top: 45%;
        left: 50%;
        margin-top: -100px;
        margin-left: -200px;
    }

    h1 {
        text-align: center;
    }

    .wrapper {
        padding-top: 10px;
        padding-left: 313px;
    }

    .button {
        display: inline-block;
        padding-bottom: 7px;
        text-align: center;
        font-size: 20px;
    }
</style>