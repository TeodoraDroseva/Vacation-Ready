@model LoginViewModel

@{
    ViewBag.TItle = "Login";
}

@section css {
    <link rel="stylesheet" href="~/css/floating-labels.css">
    <style>
        a,
        a:focus,
        a:hover {
            color: #fff;
        }

        .btn-primary,
        .btn-primary:hover,
        .btn-primary:focus {
            color: #333;
            text-shadow: none;
        }

        html,
        body {
            height: 100%;
            background-color: #333;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            color: #fff;
            text-shadow: 0 .05rem .1rem rgba(0, 0, 0, .5);
            box-shadow: inset 0 0 5rem rgba(0, 0, 0, .5);
        }
    </style>
}

<form method="post" class="form-signin">
    <div class="text-center mb-4">
        <h1 class="h1 mb-3 font-weight-normal">Sign in</h1>
    </div>
    <div class="form-label-group">
        <input id="inputUsername" asp-for="Username" class="form-control" type="text" placeholder="Username" required="" autofocus="" />
        <label asp-for="Username"></label>
        @Html.ValidationMessageFor(model => model.Username)
    </div>
    <div class="form-label-group">
        <input id="inputPassword" asp-for="Password" class="form-control" type="password" placeholder="Password" required="" />
        <label asp-for="Password"></label>
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <div class="checkbox mb-2">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" />
            @Html.DisplayNameFor(x => x.RememberMe)
        </label>
    </div>
    <button class="btn btn-lg btn-primary float-right" type="submit">Sign in</button>
</form>