@model Vacation_Ready.Models.Users.RegistrationViewModel

@{
    ViewBag.Title = "Registration";
}

<div class="registration">
    <h1>Register</h1>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group login_input">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group login_input">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group login_input">
            <label>Confirm password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group login_input">
            <label>First name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group login_input">
            <label>Last name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go back</a>
        <div class="wrapper">
            <input class="btn btn-primary login_btn" type="submit" value="Register" />
        </div>
    </form>
</div>

<style>
    .registration {
        height: 200px;
        width: 400px;
        position: fixed;
        top: 30%;
        left: 50%;
        margin-top: -100px;
        margin-left: -200px;
    }

    h1 {
        text-align: center;
    }

    .button {
        display: inline-block;
        padding-bottom: 7px;
        text-align: center;
        font-size: 20px;
    }
</style>