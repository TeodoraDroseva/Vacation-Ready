@model Vacation_Ready.Models.Users.RegistrationViewModel

@{
    ViewBag.Title = "Registration";
}

<form method="post" class="form-signin">
    <div class="text-center mb-4">
        <h1 class="h1 mb-3 font-weight-normal">Registration</h1>
    </div>
    <div class="form-label-group">
        <input id="inputUsername" asp-for="Username" class="form-control" type="text" placeholder="Username" required="" />
        <label asp-for="Username"></label>
    </div>
    <div class="form-label-group">
        <input id="inputPassword" asp-for="Password" class="form-control" type="password" placeholder="Password" required="" />
        <label asp-for="Password"></label>
    </div>
    <div class="form-label-group">
        <input id="inputConfirmPassword" asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" required="" />
        <label asp-for="ConfirmPassword"></label>
    </div>
    <div class="form-label-group">
        <input id="inputFirstName" asp-for="FirstName" class="form-control" type="text" placeholder="First name" required="" />
        <label asp-for="FirstName"></label>
    </div>
    <div class="form-label-group">
        <input id="inputLastName" asp-for="LastName" class="form-control" type="text" placeholder="Last name" required="" />
        <label asp-for="LastName"></label>
    </div>
    <button class="btn btn-lg btn-primary float-right" type="submit">Register</button>
</form>